@model LoginViewModel
@{	
    ViewData["Title"] = "Login";
}

<div class="text-center mt-5">
    <h1>Welcome Back</h1>
    <p>Please login below to access the rest of LoginPOC.</p>
</div>

<div class="mx-auto mt-4" style="max-width: 40rem;">
    <form asp-controller="Home" asp-action="Welcome" method="post">  
        <div class="form-group mb-3">
            <label for="inputEmail" class="form-label">Email Address</label>
            <input asp-for="Email" type="email" class="form-control" id="inputEmail" placeholder="Enter email" /> 
        </div>
        <div class="form-group mb-3">
            <label for="inputPassword" class="form-label">Password:</label>
            <input asp-for="Password" type="password" class="form-control" id="inputPassword" placeholder="Password">           
            <a href="#" class="form-text link-secondary">Forgot password?</a>
        </div>

        <button type="submit" class="btn btn-outline-primary col-12">Login to LoginPOC</button>
    </form>
</div>